<h1>My Wishes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  	
    <% @requests.each do |request| %>
      <tr>
      <% if user_signed_in? && current_user == request.user %>
        <td><%= request.date.strftime("%B %d, %Y") %></td>
        <td><%= request.time.strftime("%I:%M %p") %></td>
        <td><%= request.description %></td>
      
        <td><%= link_to 'Show',  profile_request_path(request.profile_id, request) %></td>
        <td><%= link_to 'Edit', edit_profile_request_path(request.profile_id, request) %></td>
        <td><%= link_to 'Destroy', profile_request_path(request.profile_id, request), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %> 
      </tr>
    <% end %>
  
  </tbody>
</table>
